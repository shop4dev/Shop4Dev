                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    Categories</h3>
                            </div>
                            <div class="panel-body">
                                <table class="table">
                                    {% for cat in cats %}
                                    <tr id="cat{{ cat.id }}">
                                        <td>
                                            {{ cat.name }}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </div>
                            <div class="panel-footer">
                                <a href="/shop" class="btn btn-success" role="button">Customize Your Site</a></div>
                        </div>
                    </div>
                    <div class="col-sm-9"  style="padding-left: 0">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    Modules</h3>
                            </div>
                            <div class="panel-body">
