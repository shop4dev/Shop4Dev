{% extends 'main/base.html.twig' %}
{% use 'main/footer.html.twig' %}

{% block title %}
    Shop4Website
{% endblock %}

{% block body %}
    <div class="content-block" id="header">
        <div id="overlay-1">
            <header id="site-header" class="clearfix">
